.panel-item-wrap
  padding 10px 15px 0
.panel__content
  border-radius 10px
  background-color #fff
.panel__tags
  position relative
  display flex
  padding 15px 0 12px 15px
  .panel__tag
    border-1px()
    padding 6PX 14PX
    margin-right 6PX
    font-weight bold
    &::after
      border-radius 40px
.panel__qrcode
  position absolute
  right 10px
  top 50%
  transform translateY(-50%)
  padding 10px
  .iconfont
    font-size 24px
    color #EC8C25
.panel__row
  display flex
  padding 0 15px
  font-size 12px
  line-height 1.3
  margin-bottom 5PX
  .label
    width 50PX
    height 16PX
    overflow hidden
    text-align justify
    &::after
      content ''
      display inline-block
      width 100%
  .value
    flex 1
  .phone
    color $app-main
    text-decoration underline
.panel__remark
  font-size 12px
  padding 13px 15px
  line-height 1.3
  margin-top 10px
.panel__price
  &.active
    color #EC8C25
  span
    font-weight 700
    font-size 16px
.comment
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
.comment:first-child
  margin-bottom 6px
.panel__footer
  flex-box-row(center, space-between)
  .panel__detail
    border-1px()
    width 90PX
    height 32PX
    line-height 32PX
    text-align center
    font-size 16px
    color rgba(0, 0, 0, 0.6)
    &::after
      border-radius 64PX
  height 56px
  .cube-checkbox
    margin-left 10px
  .cube-checkbox-ui
    margin-right 0
    font-size 22px
    padding 10px 0 10px 20px
    i
      top 10px
      right 0
      left auto
  .cube-checkbox-label
    display none
  .left-price
    flex 1
    font-size 12px
    color $primary-c
    span
      font-size 16px
    &.active
      color rgba(0, 0, 0, 0.6)
  .right-staff
    font-weight 700
  .right-btn
    height 26px
    line-height 28px
    padding 0 15px
    border-radius 40px
    color #fff
    background-color rgba(0, 0, 0, 0.1)
    &:last-child
      margin-left 15px
    // 驳回
    &.default
      background-color $app-main
    // 接单
    &.warning
      background-color #EC8C25