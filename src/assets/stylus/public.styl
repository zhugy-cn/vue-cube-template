// 动画
.tab-panel-move--left-enter
  transform translateX(10%) translateZ(0)
  opacity 0
.tab-panel-move--left-leave-active
  transform translateX(-10%) translateZ(0)
  opacity 0
.tab-panel-move--left-enter-active
  transition transform 0.4s, opacity 0.4s ease
.tab-panel-move--left-leave-active
  transition transform 0.2s, opacity 0.2s ease
.tab-panel-move--right-enter
  transform translateX(-10%) translateZ(0)
  opacity 0
.tab-panel-move--right-leave-active
  transform translateX(10%) translateZ(0)
  opacity 0
.tab-panel-move--right-enter-active
  transition transform 0.4s, opacity 0.4s ease
.tab-panel-move--right-leave-active
  transition transform 0.2s, opacity 0.2s ease
.tab-panel-move--left-enter-active, .tab-panel-move--left-leave-active, .tab-panel-move--right-enter-active, .tab-panel-move--right-leave-active
  position absolute
  left 0
  top 0
  width 100%
